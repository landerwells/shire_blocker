{
  "manifest_version": 3,
  "name": "Shire Blocker",
  "version": "1.0",
  "description": "Native website blocker",
  "icons": {
    "48": "icons/border-48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "idle",
    "storage",
    "notifications",
    "alarms"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shire_blocker@example.com"
    }
  }
}